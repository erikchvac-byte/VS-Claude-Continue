{
  "name": "claude-md-continue-sync",
  "displayName": "CLAUDE.md Continue Sync",
  "description": "Auto-syncs CLAUDE.md files to Continue extension rules",
  "version": "1.0.0",
  "publisher": "claude-code",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikchvac-byte/VS-Claude-Continue.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/CLAUDE.md",
    "workspaceContains:**/CLAUDE.local.md",
    "workspaceContains:**/.claude/instructions.md",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeMdSync.sync",
        "title": "Sync CLAUDE.md to Continue Rules"
      },
      {
        "command": "claudeMdSync.syncAll",
        "title": "Sync All CLAUDE.md Files"
      }
    ],
    "configuration": {
      "title": "CLAUDE.md Continue Sync",
      "properties": {
        "claudeMdSync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync CLAUDE.md files to Continue rules on file changes"
        },
        "claudeMdSync.includeGlobal": {
          "type": "boolean",
          "default": true,
          "description": "Include global ~/.claude/CLAUDE.md in sync"
        },
        "claudeMdSync.rulePrefix": {
          "type": "string",
          "default": "00-claude-md",
          "description": "Prefix for Continue rule file (controls load order)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
